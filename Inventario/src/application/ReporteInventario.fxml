<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="application.ReporteInventarioController"
            prefHeight="550.0" prefWidth="950.0"
            style="-fx-background-color: #f8f4d9; -fx-border-color: #c2b280; -fx-border-width: 2;">

    <!-- Titulo principal -->
    <Text text="Reporte de Inventario"
          layoutX="350" layoutY="40"
          fill="#4a4747">
        <font>
            <Font name="Arial Black" size="20.0" />
        </font>
    </Text>

    <!-- Tabla de datos -->
    <TableView fx:id="tablaReporte" 
               layoutX="25" layoutY="70"
               prefWidth="900" prefHeight="400"
               style="-fx-background-color: #fff8dc; -fx-border-color: #b68a67;">
        <columns>
            <TableColumn fx:id="colID" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colProducto" text="Producto" prefWidth="120"/>
            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="90"/>
            <TableColumn fx:id="colPeso" text="Peso" prefWidth="90"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
            <TableColumn fx:id="colHumedad" text="Humedad" prefWidth="90"/>
            <TableColumn fx:id="colUltimoMov" text="Ãšltimo Mov" prefWidth="100"/>
            <TableColumn fx:id="colFechaMov" text="Fecha Mov" prefWidth="120"/>
            <TableColumn fx:id="colProveedor" text="Proveedor" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Boton para cerrar -->
    <Button text="Cerrar"
            layoutX="25" layoutY="490"
            prefWidth="100" prefHeight="30"
            onAction="#cerrarVentana"
            style="-fx-background-color: #f7b35a; -fx-font-weight: bold;"/>

</AnchorPane>
