<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="350" prefWidth="716.0" style="-fx-background-color: #f6f3d3;" 
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/21" 
            fx:controller="controller.PedidosController">

    <children>
        <Label layoutX="20" layoutY="10" style="-fx-font-weight: bold;" text="Pedidos:" />
        <Button fx:id="btnSalir" layoutX="60" layoutY="40" prefWidth="80" text="Salir" />

        <TableView fx:id="tablaPedidos" layoutX="19.0" layoutY="85.0" prefHeight="180" prefWidth="662.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="40" text="ID" />
                <TableColumn fx:id="colProducto" prefWidth="100" text="Producto" />
                <TableColumn fx:id="colProveedor" prefWidth="100" text="Proveedor" />
                <TableColumn fx:id="colFechaEnt" prefWidth="80" text="Fecha_ent" />
                <TableColumn fx:id="colCantidad" prefWidth="70" text="Cantidad" />
                <TableColumn fx:id="colFechaCre" prefWidth="92.0" text="Fecha_cre" />
                <TableColumn fx:id="colRecibido" prefWidth="58.0" text="Recibido" />
                <TableColumn fx:id="colObs" prefWidth="120" text="Observaciones" />
            </columns>
        </TableView>

        <Button fx:id="btnVerPedidos" layoutX="60" layoutY="290" prefWidth="100" text="Ver pedidos" />
    </children>
</AnchorPane>
