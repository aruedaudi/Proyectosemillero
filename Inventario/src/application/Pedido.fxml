                <TableColumn fx:id="colRecibido" prefWidth="58.0" text="Recibido" />
                <TableColumn fx:id="colObs" prefWidth="120" text="Observaciones" />
            </columns>
        </TableView>

        <Button fx:id="btnVerPedidos" layoutX="20.0" layoutY="288.0" onAction="#VerPedidos" prefWidth="100" text="Ver pedidos" />
    </children>
</AnchorPane>
