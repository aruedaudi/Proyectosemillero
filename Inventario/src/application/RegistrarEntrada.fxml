<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.RegistrarEntradaController"
            prefWidth="400" prefHeight="520"
            style="-fx-background-color: #f6f3d3; -fx-border-color: #333; -fx-border-width: 2;">
    
    <!-- Botón de salida -->
    <Button text="Salir"
            layoutX="20" layoutY="10"
            fx:id="btnSalir"
            onAction="#salir"
            style="-fx-background-radius: 10; -fx-padding: 6 12;" />

    <!-- Contenedor principal -->
    <VBox spacing="15" layoutX="40" layoutY="60" prefWidth="320" alignment="TOP_CENTER">
        
        <!-- Fila: Producto / Proveedor -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="6">
                <Label text="Producto" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="cbProducto" promptText="Producto" prefWidth="140"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Proveedor" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="cbProveedor" promptText="Proveedor" prefWidth="140"/>
            </VBox>
        </HBox>

        <!-- Fila: FechaEntrada / Cantidad -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="6">
                <Label text="Fecha Entrada" style="-fx-font-weight: bold;" />
                <DatePicker fx:id="dpFechaEntrada" prefWidth="140"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Cantidad" style="-fx-font-weight: bold;" />
                <TextField fx:id="tfCantidad" promptText="Cantidad" prefWidth="140"/>
            </VBox>
        </HBox>

        <!-- Fila: FechaCreacion / Recibido -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="6">
                <Label text="Fecha Creación" style="-fx-font-weight: bold;" />
                <DatePicker fx:id="dpFechaCreacion" prefWidth="140"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Recibido" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="cbRecibido" promptText="Seleccione" prefWidth="140"/>
            </VBox>
        </HBox>

        <!-- Campo de Observaciones -->
        <VBox spacing="6" alignment="CENTER">
            <Label text="Observaciones" style="-fx-font-weight: bold;" />
            <TextArea fx:id="taObservaciones"
                      promptText="Observaciones"
                      prefRowCount="4"
                      prefWidth="310"/>
        </VBox>

        <!-- Botón Registrar -->
        <Button fx:id="btnRegistrar"
                text="Registrar"
                onAction="#registrar"
                style="-fx-background-radius: 12; -fx-padding: 8 20; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>