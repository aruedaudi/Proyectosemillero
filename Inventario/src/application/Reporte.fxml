<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="800" style="-fx-background-color: #f4efc7; -fx-border-color: black;"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="application.ReporteController">

    <children>
        <!-- Botón Cargar -->
        <Button fx:id="btnCargar" layoutX="20" layoutY="20" onAction="#btnCargar" prefWidth="80" text="CARGAR" />

        <!-- Filtros de Semana, Mes y Año -->
        <HBox layoutX="120" layoutY="20" spacing="15">
            <ComboBox fx:id="comboSemana" prefWidth="120" promptText="SEMANA" />
            <ComboBox fx:id="comboMes" prefWidth="120" promptText="MES" />
            <ComboBox fx:id="comboAnho" prefWidth="120" promptText="AÑO" />
        </HBox>

        <!-- Indicadores de Total pedidos y Proveedor más solicitado -->
        <HBox layoutX="120" layoutY="70" spacing="20">
            <VBox spacing="5">
                <Label text="Total pedidos">
                    <font>
                        <Font name="System Bold Italic" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txtTotalPedidos" editable="false" prefWidth="100" />
            </VBox>
            <VBox spacing="5">
                <Label text="Proveedor más solicitado" wrapText="true">
                    <font>
                        <Font name="System Bold Italic" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txtProveedorMasSolicitado" editable="false" prefWidth="200" />
            </VBox>
        </HBox>

        <!-- Tabla principal -->
        <TableView fx:id="tablaReporte" layoutX="20" layoutY="130" prefHeight="200" prefWidth="760">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                <TableColumn fx:id="colProducto" prefWidth="250" text="Producto" />
                <TableColumn fx:id="colUnidades" prefWidth="200" text="Unidades pedidas" />
                <TableColumn fx:id="colProveedor" prefWidth="230" text="Proveedor" />
            </columns>
        </TableView>

        <!-- Contenedor inferior -->
		<HBox layoutX="20" layoutY="350" prefWidth="760" spacing="20" alignment="CENTER">
		    <Button fx:id="btnSalir" onAction="#btnSalir" prefWidth="100" text="Salir" />
		    
		    <Label fx:id="lblEstado" prefWidth="520" text=""
		           style="-fx-text-fill: #333333; -fx-font-style: italic;" />
		    
		    <Button fx:id="btnDescargar" onAction="#btnDescargar" prefWidth="100" text="DESCARGAR" />
		</HBox>
    </children>
</AnchorPane>
