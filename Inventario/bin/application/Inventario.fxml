<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500" prefWidth="800" style="-fx-background-color: #f4f1cd; -fx-border-color: #000; -fx-border-width: 1;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="application.InventarioController">
    
    <!-- BotÃ³n salir -->
    <Button layoutX="20" layoutY="20" onAction="#cerrarInventario" prefWidth="80" style="-fx-font-weight: bold;" text="Salir" />

    <!-- Tabla de inventario -->
    <TableView fx:id="tablaInventario" layoutX="20" layoutY="70" prefHeight="280" prefWidth="760">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="colProducto" prefWidth="100" text="Producto" />
            <TableColumn fx:id="colCantidad" prefWidth="80" text="Cantidad" />
            <TableColumn fx:id="colPeso" prefWidth="80" text="Peso" />
            <TableColumn fx:id="colEstado" prefWidth="80" text="Estado" />
            <TableColumn fx:id="colHumedad" prefWidth="80" text="Humedad" />
            <TableColumn fx:id="colFecha" prefWidth="100" text="Fecha Ing" />
            <TableColumn fx:id="colProveedor" prefWidth="100" text="Proveedor" />
        </columns>
    </TableView>

    <!-- Campos de texto -->
    <HBox layoutX="20" layoutY="370" spacing="10">
        <TextField fx:id="txtProducto" prefWidth="90" promptText="Producto" />
        <TextField fx:id="txtCantidad" prefWidth="90" promptText="Cantidad" />
        <TextField fx:id="txtPeso" prefWidth="90" promptText="Peso" />
        <TextField fx:id="txtEstado" prefWidth="90" promptText="Estado" />
        <TextField fx:id="txtHumedad" prefWidth="90" promptText="Humedad" />
        <TextField fx:id="txtFecha" prefWidth="90" promptText="Fecha Ing" />
        <TextField fx:id="txtProveedor" prefWidth="90" promptText="Proveedor" />
    </HBox>

    <!-- Botones inferiores -->
    <HBox alignment="CENTER" layoutX="230" layoutY="420" spacing="20">
        <Button onAction="#registrarEntrada" text="Registrar entrada" />
        <Button onAction="#registrarSalida" text="Registrar salida" />
        <Button fx:id="btnVerReporte" text="Ver reporte" onAction="#verReporte" />
    </HBox>

</AnchorPane>
